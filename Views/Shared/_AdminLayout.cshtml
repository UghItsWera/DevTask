<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iOTA Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #f5f7fa;
            color: #333;
        }

        .admin-nav {
            background: #2c3e50;
            color: white;
            padding: 1rem 2rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .admin-nav-container {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .admin-logo {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            text-decoration: none;
            letter-spacing: 2px;
        }

        .admin-menu {
            display: flex;
            gap: 2rem;
            list-style: none;
            align-items: center;
        }

        .admin-menu a {
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
        }

        .admin-menu a:hover {
            color: white;
        }

        .btn-view-site {
            background: #17c5b8;
            color: white;
            padding: 0.5rem 1.2rem;
            border-radius: 4px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: background 0.3s;
        }

        .btn-view-site:hover {
            background: #14b0a4;
        }

        main {
            min-height: calc(100vh - 150px);
        }

        .admin-footer {
            background: white;
            padding: 1.5rem 2rem;
            text-align: center;
            color: #666;
            font-size: 0.9rem;
            border-top: 1px solid #e0e0e0;
            margin-top: 3rem;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <nav class="admin-nav">
        <div class="admin-nav-container">
            <a href="/Admin" class="admin-logo">iOTA Admin</a>
            <ul class="admin-menu">
                <li><a href="/Admin">Page Sections</a></li>
                <li><a href="/" class="btn-view-site" target="_blank">üëÅ View Site</a></li>
            </ul>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer class="admin-footer">
        <p>&copy; @DateTime.Now.Year iOTA Interiors - Admin Panel</p>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>