@model IEnumerable<VertoDevTest.Models.PageSection>

@{
    ViewData["Title"] = "Home - iOTA Interiors";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
}

<!-- Hero Slider Section -->
<section class="hero-slider">
    <div class="slider">
        @foreach (var slide in Model.Where(m => m.SectionType == "Hero"))
        {
            <div class="slider-item" style="background-image: url('@(slide.ImagePath ?? "/images/hero-default.jpg")');">
                <div class="slider-overlay"></div>
                <div class="slider-content">
                    <h1>@slide.Title</h1>
                </div>
            </div>
        }
    </div>
    <button class="btn-explore" onclick="showAlert('Explore Our Work')">
        ▼ Explore Our Work
    </button>
</section>

<!-- Services Section -->
<section class="services-section">
    <div class="services-icons">
        <div class="service-item">
            <div class="service-icon">
                <svg viewBox="0 0 24 24">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                </svg>
            </div>
            <h3>Workplace<br/>Consultation</h3>
        </div>
        
        <div class="service-item">
            <div class="service-icon">
                <svg viewBox="0 0 24 24">
                    <path d="M12 19l7-7 3 3-7 7-3-3z"/>
                    <path d="M18 13l-1.5-7.5L2 2l3.5 14.5L13 18l5-5z"/>
                    <path d="M2 2l7.586 7.586"/>
                </svg>
            </div>
            <h3>Sustainable<br/>Solutions</h3>
        </div>
        
        <div class="service-item">
            <div class="service-icon">
                <svg viewBox="0 0 24 24">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                    <line x1="16" y1="13" x2="8" y2="13"/>
                    <line x1="16" y1="17" x2="8" y2="17"/>
                    <polyline points="10 9 9 9 8 9"/>
                </svg>
            </div>
            <h3>Interior Design<br/>& Space Planning</h3>
        </div>
        
        <div class="service-item">
            <div class="service-icon">
                <svg viewBox="0 0 24 24">
                    <rect x="3" y="3" width="7" height="7"/>
                    <rect x="14" y="3" width="7" height="7"/>
                    <rect x="14" y="14" width="7" height="7"/>
                    <rect x="3" y="14" width="7" height="7"/>
                </svg>
            </div>
            <h3>Furniture</h3>
        </div>
    </div>
    
    <div class="services-content">
        @{
            var serviceContent = Model.FirstOrDefault(m => m.SectionType == "Services");
        }
        <h2>@(serviceContent?.Title ?? "Custom built design & furniture solutions")</h2>
        <p>@(serviceContent?.Content ?? "Specialists in transforming commercial spaces into agile, functional and empowering environments.")</p>
        <button class="btn-primary" onclick="showAlert('What We Do')">What We Do</button>
    </div>
</section>

<!-- Portfolio Section -->
<section class="portfolio-section">
    <h2>Explore our latest work...</h2>
    <div class="portfolio-grid">
        @foreach (var item in Model.Where(m => m.SectionType == "Portfolio").Take(3))
        {
            <div class="portfolio-item">
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@item.ImagePath" alt="@item.Title" />
                }
                <div class="portfolio-overlay">
                    <h3>@item.Title</h3>
                    <p>@item.Content</p>
                    <a href="#" class="view-more" onclick="showAlert('View More - @item.Title'); return false;">View More</a>
                </div>
            </div>
        }
    </div>
</section>

<!-- Sectors Section -->
<section class="sectors-section">
    <div class="sector-item office" onclick="showAlert('Office Sector')">
        <div class="sector-icon-wrapper">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
            </svg>
        </div>
        <h3>Office</h3>
    </div>
    
    <div class="sector-item education" onclick="showAlert('Education Sector')">
        <div class="sector-icon-wrapper">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
                <path d="M6 12v5c3 3 9 3 12 0v-5"/>
            </svg>
        </div>
        <h3>Education</h3>
    </div>
    
    <div class="sector-item healthcare" onclick="showAlert('Healthcare Sector')">
        <div class="sector-icon-wrapper">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
        </div>
        <h3>Healthcare</h3>
    </div>
    
    <div class="sector-item hospitality" onclick="showAlert('Hospitality Sector')">
        <div class="sector-icon-wrapper">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 8h1a4 4 0 0 1 0 8h-1M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"/>
                <line x1="6" y1="1" x2="6" y2="4"/>
                <line x1="10" y1="1" x2="10" y2="4"/>
                <line x1="14" y1="1" x2="14" y2="4"/>
            </svg>
        </div>
        <h3>Hospitality</h3>
    </div>
</section>

<!-- About Section -->
<section class="about-section" style="background-image: url('@(Model.FirstOrDefault(m => m.SectionType == "About")?.ImagePath ?? "/images/about-default.jpg")');">
    <div class="about-overlay"></div>
    <div class="about-content">
        @{
            var aboutContent = Model.FirstOrDefault(m => m.SectionType == "About");
        }
        <h2>@(aboutContent?.Title ?? "Discover more about iOTA")</h2>
        <p>@(aboutContent?.Content ?? "Find out who we are, why we do it and why we love what we do.")</p>
        <div class="about-buttons">
            <button class="btn-video" onclick="showAlert('Watch The Video')">👁 Watch The Video</button>
            <button class="btn-about" onclick="showAlert('About iOTA')">About iOTA</button>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.slider').slick({
                dots: true,
                infinite: true,
                speed: 800,
                slidesToShow: 1,
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 5000,
                fade: true,
                cssEase: 'ease-in-out',
                arrows: false
            });
        });

        function showAlert(buttonName) {
            alert('This is a button: ' + buttonName);
        }
    </script>
}