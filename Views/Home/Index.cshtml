@model IEnumerable<PageSection>

<div class="hero-slider">
    @foreach (var slide in Model.Where(s => s.SortOrder <= 3))
    {
        <div class="slide">
            <img src="@slide.MediaItem?.Url" alt="@slide.MediaItem?.AltText" />
            @Html.Raw($"<{slide.HtmlTag}>{slide.Title}</{slide.HtmlTag}>")
            <p>@slide.Body</p>
        </div>
    }
</div>

<section class="custom-section">
    @{
        var custom = Model.FirstOrDefault(s => s.SortOrder == 4);
    }
    @if (custom != null)
    {
        <h2>@custom.Title</h2>
        <p>@custom.Body</p>
    }
</section>

<section class="projects">
    <h2>Explore our latest work…</h2>
    <div class="grid">
        @foreach (var project in Model.Where(s => s.SortOrder >= 5))
        {
            <div class="project-card">
                <img src="@project.MediaItem?.Url" alt="@project.MediaItem?.AltText" />
                <h3>@project.Title</h3>
                <p>@project.Body</p>
            </div>
        }
    </div>
</section>