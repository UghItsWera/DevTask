@model IEnumerable<VertoDevTest.Models.PageSection>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin";
}

<div class="container admin-panel">
    <h1>Admin â€” Content</h1>
    <p><a class="btn" href="/Admin/Create">Create new section</a></p>

    <table class="admin-table">
        <thead>
            <tr><th>Title</th><th>Image</th><th>Sort</th><th>Actions</th></tr>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    @if (item.MediaItem != null) {
                        <img src="@item.MediaItem.Url" alt="@item.MediaItem.AltText" style="height:40px;" />
                    }
                </td>
                <td>@item.SortOrder</td>
                <td>
                    <a href="/Admin/Edit/@item.Id">Edit</a> |
                    <a href="/Admin/Delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>