@model VertoDevTest.Models.PageSection

@{
    ViewData["Title"] = "Edit Page Section";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-container">
    <div class="admin-header">
        <h1>Edit Page Section</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <span>‚Üê Back to List</span>
        </a>
    </div>

    <div class="form-container">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="admin-form">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="ImagePath" id="existingImagePath" />
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="SectionType" class="form-label"></label>
                    <select asp-for="SectionType" class="form-control">
                        <option value="">-- Select Section Type --</option>
                        <option value="Hero">Hero Slider</option>
                        <option value="Services">Services</option>
                        <option value="Portfolio">Portfolio</option>
                        <option value="About">About</option>
                    </select>
                    <span asp-validation-for="SectionType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DisplayOrder" class="form-label"></label>
                    <input asp-for="DisplayOrder" class="form-control" type="number" min="1" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Current Image</label>
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="current-image">
                        <img src="@Model.ImagePath" alt="Current image" />
                    </div>
                }
                else
                {
                    <p class="text-muted">No image uploaded</p>
                }
            </div>

            <div class="form-group">
                <label for="ImageFile" class="form-label">Upload New Image (optional)</label>
                <div class="file-upload-wrapper">
                    <input type="file" name="ImageFile" id="ImageFile" class="file-input" accept="image/*" onchange="previewImage(event)" />
                    <label for="ImageFile" class="file-label">
                        <span class="file-icon">üìÅ</span>
                        <span class="file-text">Choose a new image file</span>
                    </label>
                </div>
                <div id="imagePreview" class="image-preview"></div>
                <small class="form-text">Leave empty to keep current image</small>
            </div>

            <div class="form-group">
                <label asp-for="IsActive" class="checkbox-label">
                    <input asp-for="IsActive" type="checkbox" />
                    <span>Active (show on website)</span>
                </label>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <span>üíæ</span> Update Section
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this section?')">
                    <span>üóëÔ∏è</span> Delete
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            const preview = document.getElementById('imagePreview');
            const fileText = document.querySelector('.file-text');
            
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.innerHTML = `<img src="${e.target.result}" alt="Preview" />`;
                    fileText.textContent = file.name;
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
}

